    # ==========================================================================
    - cinematicId: ending_good
      displayName: "Peace Returns"
      type: hybrid
      duration: 120
      isSkippable: true
      triggerPoint: game_complete_good
      description: |
        The kingdom is restored. All guardians united.
        Celebration across Funan. Credits roll.
      assets:
        timeline: Timeline_Ending_Good
        video: Video_Ending_Celebration

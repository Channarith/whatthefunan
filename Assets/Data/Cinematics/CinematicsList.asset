      type: timeline
      duration: 20
      isSkippable: true
      triggerPoint: naga_quest_complete
      description: |
        The Naga Prince pledges allegiance after being saved. 
        Dramatic underwater throne room scene.
      assets:
        timeline: Timeline_Unlock_Naga
        music: Music_Naga_Theme
        
    - cinematicId: unlock_apsara
      displayName: "Mealea's Blessing"
      type: timeline
      duration: 25
      isSkippable: true
      triggerPoint: apsara_quest_complete
      description: |

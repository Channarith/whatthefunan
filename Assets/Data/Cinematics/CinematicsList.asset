      type: hybrid
      duration: 90
      isSkippable: true
      skipHoldTime: 1.5
      playOnce: true
      triggerPoint: game_first_launch
      description: |
        Opening cinematic introducing the world of Funan, the guardian creatures,
        and the Shadow Serpent threat. Sets up the prophecy and player's destiny.
      assets:
        timeline: Timeline_Intro
        voiceover: VO_Intro_Narration
        music: Music_Intro_Epic
        backgrounds:
          - BG_Intro_01_AerialJungle
          - BG_Intro_02_Port
          - BG_Intro_03_Guardians
          - BG_Intro_04_Shadow
          - BG_Intro_05_Prophecy
      subtitles:
        - time: 2.0
          duration: 10.0
          key: intro_narration_1
        - time: 17.0
          duration: 11.0
          key: intro_narration_2
        - time: 32.0
          duration: 16.0
          key: intro_narration_3
        - time: 52.0
          duration: 16.0
          key: intro_narration_4
        - time: 72.0
          duration: 12.0
          key: intro_narration_5
  

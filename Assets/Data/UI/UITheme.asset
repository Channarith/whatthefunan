%YAML 1.1
%TAG !u! tag:unity3d.com,2011:
--- !u!114 &11400000
MonoBehaviour:
  m_ObjectHideFlags: 0
  m_CorrespondingSourceObject: {fileID: 0}
  m_PrefabInstance: {fileID: 0}
  m_PrefabAsset: {fileID: 0}
  m_GameObject: {fileID: 0}
  m_Enabled: 1
  m_EditorHideFlags: 0
  m_Script: {fileID: 11500000, guid: PLACEHOLDER_GUID, type: 3}
  m_Name: UITheme
  m_EditorClassIdentifier: 
  
  themeName: Funan Gold
  
  # ============================================================================
  # COLOR PALETTE
  # Inspired by Angkorian art: golds, sandstone, jungle greens, water blues
  # ============================================================================
  
  colors:
    primary: "#C9A227"          # Royal Gold
    primaryDark: "#8B7020"      # Dark Gold
    secondary: "#2D5A4A"        # Temple Green
    secondaryDark: "#1A3D32"    # Dark Jungle
    accent: "#E85D4C"           # Coral Red (for alerts)
    background: "#F5E6C8"       # Sandstone Beige
    backgroundDark: "#3D3426"   # Dark Stone
    panel: "#FFFDF5"            # Cream White
    panelDark: "#4A4236"        # Brown Stone
    text: "#2C2416"             # Dark Brown
    textLight: "#F5E6C8"        # Light Text
    textMuted: "#8B7D5A"        # Muted Gold
    success: "#4CAF50"          # Green
    warning: "#FFC107"          # Amber
    error: "#E85D4C"            # Red
    info: "#5DADE2"             # Water Blue
    coins: "#FFD700"            # Gold
    gems: "#9B59B6"             # Purple
    xp: "#3498DB"               # Blue
    health: "#E74C3C"           # Red
    stamina: "#2ECC71"          # Green
    
  # ============================================================================
  # TYPOGRAPHY
  # ============================================================================
  
  fonts:
    heading: Philosopher          # Elegant serif for titles
    headingFallback: Georgia
    body: Nunito                  # Friendly sans-serif for readability
    bodyFallback: Arial
    display: Cinzel               # Ornate display for special moments
    displayFallback: Times New Roman
    
  fontSizes:
    h1: 48
    h2: 36
    h3: 28
    h4: 22
    body: 18
    small: 14
    tiny: 12
    
  # ============================================================================
  # BUTTON STYLES
  # ============================================================================
  
  buttonStyles:
    primary:
      background: "#C9A227"
      text: "#2C2416"
      border: "#8B7020"
      borderWidth: 3
      cornerRadius: 12
      shadow: true
      hoverScale: 1.05
      pressedScale: 0.95
      
    secondary:
      background: "#2D5A4A"
      text: "#F5E6C8"
      border: "#1A3D32"
      borderWidth: 2
      cornerRadius: 10
      shadow: true
      
    danger:
      background: "#E85D4C"
      text: "#FFFFFF"
      border: "#C0392B"
      borderWidth: 2
      cornerRadius: 10
      
    ghost:
      background: "transparent"
      text: "#C9A227"
      border: "#C9A227"
      borderWidth: 2
      cornerRadius: 10
      
  # ============================================================================
  # PANEL STYLES
  # ============================================================================
  
  panelStyles:
    default:
      background: "#FFFDF5"
      border: "#C9A227"
      borderWidth: 4
      cornerRadius: 16
      shadowOffset: [4, 4]
      shadowBlur: 8
      
    ornate:
      background: "#FFFDF5"
      border: "#C9A227"
      borderWidth: 6
      cornerRadius: 20
      useCornerDecorations: true
      decorationStyle: khmer_pattern
      
    dark:
      background: "#3D3426"
      border: "#C9A227"
      borderWidth: 3
      cornerRadius: 12
      
  # ============================================================================
  # DECORATIVE ELEMENTS
  # ============================================================================
  
  decorations:
    cornerFlourish: sprite_corner_flourish
    divider: sprite_divider_naga
    frameOrnate: sprite_frame_khmer
    iconBackground: sprite_icon_bg_lotus
    buttonShine: sprite_button_shine
    
  # ============================================================================
  # ANIMATIONS
  # ============================================================================
  
  animations:
    panelOpen:
      type: scale_fade
      duration: 0.3
      easing: ease_out_back
      
    panelClose:
      type: scale_fade
      duration: 0.2
      easing: ease_in
      
    buttonHover:
      type: scale_glow
      duration: 0.15
      
    notification:
      type: slide_bounce
      duration: 0.4
      direction: top


  # ============================================================================
  # MUSIC TRACKS
  # Using authentic Cambodian/Southeast Asian instruments:
  # - Roneat (xylophone), Skor (drums), Khim (hammered dulcimer)
  # - Tro (fiddle), Khloy (flute), Chapei (lute)
  # ============================================================================
  
  musicTracks:
    - trackId: music_main_menu
      trackName: Echoes of Funan
      description: Majestic theme with Roneat xylophone and Skor drums
      mood: epic, welcoming
      bpm: 90
      looping: true
      fadeIn: 2.0
      
    - trackId: music_village
      trackName: River Village Dawn
      description: Peaceful morning theme with Khloy flute and soft Skor
      mood: peaceful, cheerful
      bpm: 72
      looping: true
      
    - trackId: music_exploration
      trackName: Jungle Adventure
      description: Playful exploration with Chapei lute and light percussion
      mood: adventurous, curious
      bpm: 100
      looping: true
      
    - trackId: music_combat
      trackName: Warriors of the Kingdom
      description: Intense battle with driving Skor drums and Roneat
      mood: intense, heroic
      bpm: 140
      looping: true
      combatIntensity: dynamic
      
    - trackId: music_mystery
      trackName: Temple Whispers
      description: Mysterious ambience with Tro fiddle and ethereal pads
      mood: mysterious, ancient
      bpm: 60
      looping: true
      
    - trackId: music_underwater
      trackName: Naga's Domain
      description: Flowing underwater theme with Khim dulcimer and water sounds
      mood: magical, serene
      bpm: 80
      looping: true
      
    - trackId: music_market
      trackName: Ã“c Eo Bazaar
      description: Lively market music with multiple cultural instruments
      mood: busy, festive
      bpm: 120
      looping: true
      
    - trackId: music_sacred
      trackName: Apsara's Blessing
      description: Sacred temple theme with ceremonial bells and chanting
      mood: spiritual, powerful
      bpm: 66
      looping: true
      
    - trackId: music_boss
      trackName: Shadow Serpent Rises
      description: Epic boss battle with full orchestra and traditional instruments
      mood: epic, dangerous
      bpm: 150
      looping: true
      phases: [intro, battle, desperate, victory]
      
    - trackId: music_victory
      trackName: Champions of Funan
      description: Triumphant victory fanfare
      mood: triumphant, joyful
      bpm: 120
      looping: false
      duration: 15
      

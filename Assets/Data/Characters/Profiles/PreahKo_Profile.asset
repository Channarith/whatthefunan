  # ABILITIES
  _basicAttack:
    abilityId: preahko_horn_thrust
    abilityName: Sacred Horns
    description: A powerful thrust with divinely blessed horns.
    damage: 28
    cooldown: 0
    staminaCost: 4
    range: 2.5
    type: Melee
    element: Earth

  _specialAbility:
    abilityId: preahko_stone_wall
    abilityName: Temple Wall
    description: |
      Preah Ko plants himself and becomes immovable, creating a barrier 
      that allies can hide behind. He takes drastically reduced damage 
      and reflects a portion back at attackers.
    damage: 0
    cooldown: 14
    staminaCost: 35
    range: 0
    type: Buff
    element: Earth
    statusEffects:
      - immovable_6s
      - damage_reduction_80
      - damage_reflect_30

  _ultimateAbility:
    abilityId: preahko_divine_charge
    abilityName: Wrath of the Guardian
    description: |
      After centuries of stillness, Preah Ko MOVES. He charges across the 
      battlefield with unstoppable force, trampling all enemies in his path 
      and ending with a devastating horn attack that sends foes flying.
    damage: 130
    cooldown: 50
    staminaCost: 70
    range: 15
    type: Melee
    element: Earth
    statusEffects:
      - unstoppable
      - knockback_massive
      - stun_3s

  _passiveAbility:
    abilityId: preahko_steadfast
    abilityName: Eternal Vigil
    description: |
      Preah Ko cannot be knocked back, pulled, or displaced. Standing still 
      gradually increases his defense. Nearby allies gain a small shield 
      that regenerates when near him.
    damage: 0
    cooldown: 0
    staminaCost: 0
    range: 5
    type: Buff
    element: Earth

  _comboMoves:
    - abilityId: preahko_stomp

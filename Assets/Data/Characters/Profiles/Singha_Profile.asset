  # ABILITIES (COMICAL)
  _basicAttack:
    abilityId: singha_cat_scratch
    abilityName: Big Kitty Scratches
    description: |
      Singha scratches enemies like a cat scratching furniture! 
      SCRITCH SCRATCH! "This is NOT undignified! It's COMBAT!"
    damage: 28
    cooldown: 0
    staminaCost: 5
    range: 2
    type: Melee
    element: None

  _specialAbility:
    abilityId: singha_lion_yawn
    abilityName: CONTAGIOUS LION YAWN
    description: |
      Singha yawns SO WIDE and SO LONG that it's contagious! 
      Everyone starts yawning! Enemies can't attack while yawning!
      "YAAAWWWN... wait, now YOU'RE yawning! YAWN ATTACK!"
    damage: 20
    cooldown: 12
    staminaCost: 30
    range: 10
    type: Debuff
    element: None
    statusEffects:
      - contagious_yawn_4s
      - sleepy_debuff
      - lion_nap_time

  _ultimateAbility:
    abilityId: singha_hairball_fury
    abilityName: LEGENDARY HAIRBALL
    description: |
      Singha hacks up the BIGGEST HAIRBALL in recorded history! 
      Years of grooming result in a MASSIVE fur-ball projectile! 
      "HACK HACK HACK... BLEEEURGH!" It's disgusting AND devastating!
    damage: 200
    cooldown: 55
    staminaCost: 70
    range: 10
    type: Ranged
    element: None
    statusEffects:
      - hairball_impact
      - gross_out_debuff
      - fur_everywhere

  _passiveAbility:
    abilityId: singha_cat_curiosity
    abilityName: Distracted by Movement
    description: |
      Singha can't help but chase anything that moves quickly! 
      He pounces on enemies who try to run! "I am a DIGNIFIED 
      guardian! I do NOT chase... okay maybe just this once..."
    damage: 0
    cooldown: 0
    staminaCost: 0
    range: 0
    type: Buff
    element: None

  _comboMoves:
    - abilityId: singha_mane_shake
      abilityName: Dramatic Mane Shake
      description: |
        Singha shakes his glorious mane and loose FUR flies everywhere! 
        Enemies get fur in their eyes, mouth, and everywhere! "Fabulous!"
      damage: 45
      cooldown: 0
      staminaCost: 18
      type: AoE
      
    - abilityId: singha_butt_wiggle
      abilityName: Pounce Preparation Wiggle

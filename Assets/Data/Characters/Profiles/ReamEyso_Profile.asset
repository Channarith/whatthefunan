  # ABILITIES
  _basicAttack:
    abilityId: reameyso_axe_swing
    abilityName: Thunder Cleave
    description: A devastating axe swing that creates a thunderclap on impact.
    damage: 45
    cooldown: 0
    staminaCost: 6
    range: 4.5
    type: Melee
    element: Wind

  _specialAbility:
    abilityId: reameyso_axe_throw
    abilityName: Thunder Axe Toss
    description: |
      Ream Eyso hurls his divine axe across the battlefield. It spins 
      through enemies before returning to his hand, creating thunder 
      shockwaves along its path.
    damage: 70
    cooldown: 12
    staminaCost: 35
    range: 20
    type: Ranged
    element: Wind
    statusEffects:
      - shockwave_path
      - stun_chance_30

  _ultimateAbility:
    abilityId: reameyso_thunder_strike
    abilityName: Wrath of the Storm King
    description: |
      Ream Eyso leaps into the sky and brings his axe down with all his 
      might, creating the loudest thunderclap in existence. The impact 
      creates a massive crater and stuns all enemies on the field.
    damage: 200
    cooldown: 60
    staminaCost: 85
    range: 12
    type: AoE
    element: Wind
    statusEffects:
      - global_stun_2s
      - crater_creation
      - deafen_5s

  _passiveAbility:
    abilityId: reameyso_stubborn
    abilityName: Unstoppable Pursuit
    description: |
      Ream Eyso's determination cannot be stopped. He's immune to slows 
      and gains movement speed when moving toward Mekhala (or any enemy 
      who has damaged him).
    damage: 0
    cooldown: 0
    staminaCost: 0
    range: 0
    type: Buff
    element: Wind

